doctype html
html
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Catalog
		link(rel='stylesheet', href='css/normalize.css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='slick/slick.css')
		link(rel='stylesheet', href='slick/slick-theme.css')
		link(rel='stylesheet', href='css/style.css')

		script(src="js/jquery-2.2.0.js", type="text/javascript")
		script(src="slick/slick.min.js", type="text/javascript")
		script(src="js/scripts.js", type="text/javascript")

	body
		include includes/header

		include includes/breadcrumbs

		.container
			form.cart__main-form
				.cart__block
					.cart__block-header Информация
					.cart__block-row
						label.cart__block-label.cart__block-label--name Имя
						input.cart__block-input(type="text")
					.cart__block-row
						label.cart__block-label.cart__block-label--tel Телефон
						input.cart__block-input(type="text")
					.cart__block-row
						label.cart__block-label.cart__block-label--email Эл. почта
						input.cart__block-input(type="text")
					.cart__block-row
						label.cart__block-label.cart__block-label--date Дата получения заказа
						input.cart__block-input(type="text")

				.cart__block.cart__block--radio
					.cart__block-header Способ доставки
					.cart__block-subheader Пожалуйста выберите способ доставки
					.cart__block-row
						input.cart__block-radio(type="radio", name="delivery", id="del-1", checked="checked")
						label.cart__block-label.cart__block-label--radio(for="del-1") Самовывоз из магазина
						.cart__block-sign 0 руб.
					.cart__block-row
						input.cart__block-radio(type="radio", name="delivery", id="del-2")
						label.cart__block-label.cart__block-label--radio(for="del-2") Доставка до метро
						.cart__block-sign 390 руб.
					.cart__block-row
						input.cart__block-radio(type="radio", name="delivery", id="del-3")
						label.cart__block-label.cart__block-label--radio(for="del-3") Доставка по городу
						.cart__block-sign 490 руб.
					.cart__block-row
						input.cart__block-radio(type="radio", name="delivery", id="del-4")
						label.cart__block-label.cart__block-label--radio(for="del-4") Доставка по области
						.cart__block-sign 800 руб.
					.cart__block-row
						input.cart__block-radio(type="radio", name="delivery", id="del-5")
						label.cart__block-label.cart__block-label--radio(for="del-5") Ночная доставка
						.cart__block-sign 1000 руб.

				.cart__block.cart__block--radio
					.cart__block-header Способ оплаты
					.cart__block-subheader Пожалуйста выберите способ оплаты
					.cart__block-row
						input.cart__block-radio(type="radio", name="payment", id="pay-1", checked="checked")
						label.cart__block-label.cart__block-label--radio(for="pay-1") Яндекс.Касса (банковские карты, электронные деньги и другое)
					.cart__block-row
						input.cart__block-radio(type="radio", name="payment", id="pay-2")
						label.cart__block-label.cart__block-label--radio(for="pay-2") Оплата наличными при получении заказа
					.cart__block-row.cart__block-row--comment
						label.cart__block-label.cart__block-label--comment Добавить комментарии к заказу
						textarea.cart__block-textarea
						input.input__submit.cart__block-submit(type="submit", value="Оформить заказ")

				.cart__block
					.cart__block-header Корзина
					.cart__block-row.cart__block-row--product
						.cart__block-product_image
							img(src="../img/products/bouquet-2.png")
						.cart__block-product_title Букет из 20 алых роз
						.cart__block-product_buttons
							button.cart__block-product_btn.cart__block-product_btn--plus
							input.cart__block-product_input(type="text", placeholder="1")
							button.cart__block-product_btn.cart__block-product_btn--minus
						.cart__block-product_sum 4,218 руб.
					.cart__block-product_block
						.cart__block-row
							.cart__block-product_title Подитог
							.cart__block-product_sum 4,218 руб.
						.cart__block-row
							.cart__block-product_title Самовывоз из магазина
							.cart__block-product_sum 0 руб.
						.cart__block-row.cart__block-row--amount
							.cart__block-product_title Итого
							.cart__block-product_sum 4,218 руб.


		include includes/footer




